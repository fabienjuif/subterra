{
  "name": "@subterra/workspace",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "scripts": {
    "build:ui": "yarn --cwd packages/ui build",
    "build": "run-p build:*",
    "start:ui": "yarn --cwd packages/ui start",
    "start": "run-p start:*",
    "test": "jest --watch",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,md,json}\" --write",
    "format:check": "prettier \"**/*.{ts,tsx,js,jsx,md,json}\" --check",
    "ci": "CI=1 run-p format:check 'test --watchAll=false'",
    "coverage:engine": "run-s 'test --coverage --all --watchAll=false'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-jest": "^24.9.0",
    "cross-env": "^7.0.2",
    "diff": "^4.0.2",
    "firebase-tools": "^8.0.2",
    "husky": ">=4",
    "jest": "24.9.0",
    "lint-staged": ">=10.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.2",
    "rollup": "^2.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,json}": "prettier --write"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
