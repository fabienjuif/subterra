rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /players/{playerId} {
      allow read: if playerId == request.auth.id;
      allow write: if false;
    }
  	match /lobby/{lobbyId}/{document=**} {
    	allow read: if get(/databases/$(database)/documents/players/$(request.auth.uid)).data.lobbyId == lobbyId;
      allow write: if false;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}